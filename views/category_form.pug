extends layout

block content
  h1= title

  form(method='POST')
    div.form-group
      label(for='name') Name:
      input#name.form-control(type='text', placeholder='Category name' name='name' required value=(undefined===category ? '' : category.name) )
    div.form-group
      label(for='description') Description:
      textarea#description.form-control(placeholder='Category description' name='description' required)= undefined===category ? '' : category.description
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg
